# ===========================================
# PromptSRC / Masteragent - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# For VPS/Production deployment, set these in EasyPanel or your orchestration platform

# ===========================================
# CORE SETTINGS
# ===========================================

# Port for the application (default: 8080 to avoid conflicts with port 80)
PORT=8080

# Enable GLiNER NER service (set to true to enable entity extraction)
ENABLE_GLINER=false

# ===========================================
# AUTHENTICATION
# ===========================================

# JWT secret key - MUST be changed in production!
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_secret_key_change_in_production

# Frontend URL (used for CORS and redirect URLs)
# For VPS: https://your-domain.com
# For local: http://localhost
FRONTEND_URL=

# GitHub OAuth (optional - for GitHub login)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=

# ===========================================
# DATABASE
# ===========================================

# Database type: sqlite or postgresql
DATABASE_TYPE=sqlite

# SQLite database URL (for local development)
DATABASE_URL=sqlite:///app/backend/promptsrc.db

# PostgreSQL URL (for production)
# Format: postgresql://user:password@host:port/database
POSTGRES_URL=

# ===========================================
# VECTOR DATABASE (QDRANT)
# ===========================================

# Qdrant URL
# For Docker: http://qdrant:6333
# For external: https://your-qdrant-instance
QDRANT_URL=http://qdrant:6333

# Qdrant API key (if required)
QDRANT_API_KEY=

# ===========================================
# GLiNER NER SERVICE
# ===========================================

# GLiNER service URL (when ENABLE_GLINER=true)
GLINER_URL=http://gliner:8002

# GLiNER model to use
GLINER_MODEL=urchade/gliner_multi

# ===========================================
# FRONTEND BUILD (Docker only)
# ===========================================

# Backend URL for frontend API calls
# Leave empty for relative URLs (recommended for production)
# Set to http://localhost:8000 for local development with separate frontend
REACT_APP_BACKEND_URL=

# ===========================================
# GITHUB STORAGE (Optional)
# ===========================================

# GitHub token for prompt storage (personal access token with repo scope)
GITHUB_TOKEN=

# GitHub repository for prompt storage (format: owner/repo)
GITHUB_REPO=

