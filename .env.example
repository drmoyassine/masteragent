# ===========================================
# PromptSRC / Masteragent - Production Environment
# ===========================================

# ===========================================
# CORE SETTINGS
# ===========================================

PORT=8080
DATABASE_TYPE=sqlite
CORS_ORIGINS=https://$(PRIMARY_DOMAIN)

# ===========================================
# AUTHENTICATION
# ===========================================

# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_production_secure_secret_key
FRONTEND_URL=https://$(PRIMARY_DOMAIN)

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=https://$(PRIMARY_DOMAIN)/auth/callback

# ===========================================
# VECTOR DATABASE (QDRANT)
# ===========================================

QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=your_qdrant_api_key

# ===========================================
# GLiNER NER SERVICE
# ===========================================

GLINER_URL=http://gliner:8002

# ===========================================
# FRONTEND BUILD
# ===========================================

# Leave empty for unified container deployments (recommended for VPS/Docker)
# Use https://api.$(PRIMARY_DOMAIN) ONLY if using a separate API-only service
REACT_APP_BACKEND_URL=

# ===========================================
# SEED ADMINISTRATOR
# ===========================================

ADMIN_EMAIL=admin@promptsrc.com
ADMIN_PASSWORD=admin123
ADMIN_USERNAME=admin
